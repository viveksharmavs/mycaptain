#include<stdio.h>
int main(void)
{
	//display the choice
	
	printf("pick an item : \n1.Pizza \n2.Burger \n3.Pasta \n4.French Fries \n5.Sandwich  \n");
	
	//read the choice
	
	int choice=0;
	scanf("%d", &choice);
	
	//display based on their choice
	
	switch(choice)
	{
		case 1:
			printf("Food item - Pizza \n");
			printf("Price- RS 239");
			break;
			
		case 2:
			printf("Food item -Burger \n");
			printf("Price- RS 129");
			break;
			
		case 3:
			printf("Food item - Pasta \n");
			printf("Price- RS 179");
			break;
			
		
		case 4:
		    printf("Food item - French Fries \n");
			printf("Price- RS  99");
			break;
			
		case 5:
		    printf("Food item - Sandwich \n");
			printf("Price- RS 149");
			break;
			
		default:
				printf("invalid choice");

	
	}
	return 0;
	
}
